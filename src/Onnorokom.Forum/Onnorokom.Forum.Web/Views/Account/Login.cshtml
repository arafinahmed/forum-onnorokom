@model LoginModel
@{
    Layout = "_AccountLayout";
    ViewData["Title"] = "Login";
}

<div class="col-lg-5 col-12">
    <div id="auth-left">
        <div>
            <a asp-action="Index" asp-controller="Home" >Home</a>
        </div>
        <h1 class="auth-title">Log in.</h1>
        <p class="auth-subtitle mb-5">Log in with your data that you entered during registration.</p>

        <form asp-action="Login" asp-antiforgery="true" asp-controller="Account" method="post" class="needs-validation" novalidate>
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="ReturnUrl" />
            <div class="form-group position-relative has-icon-left mb-4">
                <input asp-for="Email" type="email" class="form-control form-control-xl" placeholder="Email" required>
                <div class="form-control-icon">
                    <i class="bi bi-person"></i>
                </div>
            </div>
            <div class="form-group position-relative has-icon-left mb-4">
                <input asp-for="Password" type="password" class="form-control form-control-xl" placeholder="Password" required>
                <div class="form-control-icon">
                    <i class="bi bi-shield-lock"></i>
                </div>
            </div>
            <div class="form-check form-check-lg d-flex align-items-end">
                <input asp-for="RememberMe" class="form-check-input me-2" type="checkbox" id="remember">
                <label class="form-check-label text-gray-600" for="flexCheckDefault">
                    Keep me logged in
                </label>
            </div>
            <button class="btn btn-primary btn-block btn-lg shadow-lg mt-5">Log in</button>
        </form>
        <div class="text-center mt-5 text-lg fs-4">
            <p class="text-gray-600">
                Don't have an account?
                <a asp-action="Register" asp-controller="Account" class="font-bold">Sign up</a>.
            </p>
            <p><a class="font-bold" asp-controller="Account" asp-action="ForgotPassword">Forgot password?</a>.</p>
        </div>
    </div>
</div>
<div class="col-lg-7 d-none d-lg-block">
    <div id="auth-right">
    </div>
</div>
@section Scripts {
<partial name="_ValidationScriptsPartial" />
<script>
    (function() {
      'use strict';
      window.addEventListener('load', function() {
        var forms = document.getElementsByClassName('needs-validation');
        var validation = Array.prototype.filter.call(forms, function(form) {
          form.addEventListener('submit', function(event) {
            if (form.checkValidity() === false) {
              event.preventDefault();
              event.stopPropagation();
            }
            form.classList.add('was-validated');
          }, false);
        });
      }, false);
    })();
</script>
}