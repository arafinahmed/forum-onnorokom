@model ResetPasswordModel
@{
    Layout = "_AccountLayout";
    ViewData["Title"] = "Reset Password";
}

<div class="col-lg-5 col-12">
    <div id="auth-left">
        <div>
            <a asp-action="Index" asp-controller="Home" >Home</a>
        </div>
        <h1 class="auth-title">Reset Password</h1>
        <form asp-action="ResetPassword" asp-controller="Account" method="post" asp-antiforgery="true">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Email" />
            <input type="hidden" asp-for="Code" />
            <div class="form-group position-relative has-icon-left mb-4">
                <input asp-for="Password" type="password" class="form-control form-control-xl" placeholder="Password" required>
                <div class="form-control-icon">
                    <i class="bi bi-shield-lock"></i>
                </div>
            </div>
            <div class="form-group position-relative has-icon-left mb-4">
                <input asp-for="ConfirmPassword" type="password" class="form-control form-control-xl" placeholder="Confirm Password" required>
                <div class="form-control-icon">
                    <i class="bi bi-shield-lock"></i>
                </div>
            </div>
            <button class="btn btn-primary btn-block btn-lg shadow-lg mt-5">Reset</button>
        </form>
    </div>
</div>
<div class="col-lg-7 d-none d-lg-block">
    <div id="auth-right">
    </div>
</div>
@section Scripts {
<partial name="_ValidationScriptsPartial" />
}