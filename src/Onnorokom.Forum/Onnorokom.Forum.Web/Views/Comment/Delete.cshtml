@model Onnorokom.Forum.Web.Models.Comment.DeleteCommentModel

@{
    ViewData["Title"] = "Delete Comment";
}

<div id="main">
    <div class="d-flex justify-content-between">
        <h3 class="col-md-6">@Model.BoardName / @Model.TopicName</h3>
        <a type="button" class="btn btn-primary" href="/Post/Create/@Model.TopicId">Write Post</a>
    </div>
    <div class="page-content">
        <section class="row">
            <div class="col-md-6 col-12">
                <div class="card">
                    <div class="card-content">
                        <div class="card-body">
                            <form class="form form-vertical needs-validation" novalidate  method="post"
                            asp-controller="Comment" asp-action="Delete" asp-antiforgery="true">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input asp-for="TopicId" type="hidden"/>
                                <input asp-for="BoardName" type="hidden"/>
                                <input asp-for="TopicName" type="hidden"/>
                                <input asp-for="PostId" type="hidden"/>
                                <input asp-for="CommentText" type="hidden"/>
                                <div class="form-body">
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="form-group">
                                                <div class="position-relative">
                                                    <p>@Model.CommentText</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-12 d-flex justify-content-end">
                                            <button type="submit"
                                                class="btn btn-danger me-1 mb-1">
                                                Delete
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>            
</div>