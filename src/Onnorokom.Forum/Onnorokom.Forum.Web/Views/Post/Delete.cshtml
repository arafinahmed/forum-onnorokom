@model Onnorokom.Forum.Web.Models.Post.DeletePostModel
@{
    ViewData["Title"] = "Delete Post";
}

<div id="main">
    <h3>@Model.BoardName / @Model.TopicName</h3>
    <div class="page-content">
        <section class="row">
            <div class="col-md-6 col-12">
                <div class="card">
                    <div class="card-content">
                        <div class="card-body">
                            <form class="form form-vertical needs-validation" novalidate  method="post"
                            asp-controller="Post" asp-action="Delete" asp-antiforgery="true">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input asp-for="TopicId" type="hidden"/>
                                <input asp-for="BoardName" type="hidden"/>
                                <input asp-for="TopicName" type="hidden"/>
                                <input asp-for="Description" type="hidden"/>
                                <div class="form-body">
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="form-group">
                                                <div class="position-relative">
                                                    <div class="card">
                                                        <div class="card-body">
                                                            <h5 class="card-title">@Model.CreatorEmail</h5>
                                                            <p class="card-text">@Model.Description</p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-12 d-flex justify-content-end">
                                            <button type="submit"
                                                class="btn btn-danger me-1 mb-1">
                                                Delete
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>            
</div>